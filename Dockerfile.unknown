# Use Node.js LTS
FROM node:18-alpine
# Set working directory
WORKDIR /app
# Copy package files
COPY package*.json ./
# Install dependencies
RUN npm ci --only=production
# Copy app files
COPY . .
# Build TypeScript
RUN npm run build
# Expose API port
EXPOSE 3000
# Ensure TypeORM migrations run before starting
CMD ["sh", "-c", "npm run migration:run && node dist/index.js"]
